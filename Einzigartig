version: '3.8'

services:
  adminer:
    image: adminer:latest
    ports:
      - "8080:8080"
    networks:
      - webnet


  mysql:
    image: mysql:latest
    environment:
      MYSQL_ROOT_PASSWORD: password
      MYSQL_DATABASE: testdb
      MYSQL_USER: root
      MYSQL_PASSWORD: password
    ports:
      - "3306:3306"
    networks:
      - webnet


  nginx:
    image: nginx:latest
    ports:
      - "80:80"
    networks:
      - webnet

  api:
    image: node:latest
    ports:
      - "3000:3000"
    networks:
      - webnet
    depends_on:
      - mysql

networks:
  webnet:
    driver: bridge
